solvers
{
    p
      {
        solver          GAMG;
        tolerance       1e-14;
        relTol          0.5;
        smoother        GaussSeidel;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator    faceAreaPair;
        mergeLevels     1;
      }

    pFinal
      {
        solver          GAMG;
        tolerance       1e-14;
        relTol          0.5;
        smoother        GaussSeidel;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator    faceAreaPair;
        mergeLevels     1;
      }

    "(U|k|epsilon)"
      {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-14;
        relTol          0.5;
      }

    "(U|k|epsilon)Final"
      {
        $U;
        tolerance       1e-14;
        relTol          0.5;
      }

    Csalt
      {
	solver PBiCG;
	preconditioner DILU;
	tolerance 1e-8;
	relTol 0;
      }

    Cpart
      {
	solver PBiCG;
	preconditioner DILU;
	tolerance 1e-8;
	relTol 0;
      }

}

